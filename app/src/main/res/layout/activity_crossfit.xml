<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrossfitActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:tint="@color/app_theme_light"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_search_24" />

    <TextView
        android:id="@+id/trening_h6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:paddingBottom="4dp"
        android:text="Crossfit"
        android:textColor="@color/purple_500"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar9" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trening_h6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                app:srcCompat="@drawable/crossfitfull" />

            <TextView
                android:id="@+id/textView162"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="Trening crossfit obejmuje szereg różnorodnych ćwiczeń siłowo-wytrzymałościowych na poszczególne partie ciała. Ćwiczenia wykonywane są obwodowo w powtarzalnych seriach z krótkimi przerwami. W każdej z nich wykonuje się ćwiczenia na różne partie mięśniowe – jedno trwa zazwyczaj ok. dwóch minut. Bardzo ważna jest zarówno szybkość ich wykonywania, jak i dokładność oraz poprawność techniczna. Wysoka intensywność ćwiczeń i precyzja to gwarancja najlepszych efektów. Warto także zaznaczyć, że podczas zajęć crossfitu wykorzystywane są tzw. ruchy funkcjonalne, czyli zbliżone do tych, które wykonujemy na co dzień. Na przygotowanie swojego ciała do takiego wysiłku powinniśmy przeznaczyć ok. 15 minut – rozgrzewkę najlepiej dostosować do ćwiczeń, które będziemy wykonywać później. Pamiętaj, aby nie zaniedbywać tego etapu treningu – w przeciwnym razie zwiększy się ryzyko urazów i kontuzji. Po zakończonej rozgrzewce możemy rozpocząć workout, czyli tę „właściwą” część treningu, podczas której będziemy wykonywać intensywne ćwiczenia z różnych dziedzin sportowych. "
                android:textAlignment="center" />

            <Button
                android:id="@+id/crossfitzapisBtn"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="24dp"
                android:text="Zapisać się" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>