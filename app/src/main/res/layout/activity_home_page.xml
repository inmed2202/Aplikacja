<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#BCFFFFFF"
    tools:context=".HomePageActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            android:tint="@color/app_theme_light"
            app:layout_constraintBottom_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_search_24" />


        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="Fitness&amp;Training"
            android:textColor="@color/purple_500"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9" android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="350dp"
                    android:layout_height="250dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/homepage1" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="-150dp"
                    android:text="Rekomendowane dla Ciebie"
                    android:textColor="#A6A6A6"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="150dp"
                    android:text="Najczęściej wybierane online:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="-790dp">

                        <ImageView
                            android:id="@+id/hpcrossfitBtnImg"
                            android:layout_width="match_parent"
                            android:layout_height="125dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginTop="12dp"
                            android:paddingLeft="-20dp"
                            android:paddingRight="-20dp"
                            app:srcCompat="@drawable/homepage2" />

                        <ImageView
                            android:id="@+id/hpsilowyBtnImg"
                            android:layout_width="wrap_content"
                            android:layout_height="125dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:paddingLeft="-20dp"
                            android:paddingRight="-20dp"
                            app:srcCompat="@drawable/homepage3" />

                        <ImageView
                            android:id="@+id/hpboksBtnImg"
                            android:layout_width="wrap_content"
                            android:layout_height="125dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:paddingLeft="-20dp"
                            android:paddingRight="-20dp"
                            app:srcCompat="@drawable/homepage4" />

                        <ImageView
                            android:id="@+id/hpfunkcjonalnyBtnImg"
                            android:layout_width="wrap_content"
                            android:layout_height="125dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:paddingLeft="-20dp"
                            android:paddingRight="-20dp"
                            app:srcCompat="@drawable/homepage5" />

                        <ImageView
                            android:id="@+id/hprelaksacyjnyBtnImg"
                            android:layout_width="wrap_content"
                            android:layout_height="125dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="12dp"
                            android:layout_weight="1"
                            android:paddingLeft="-20dp"
                            android:paddingRight="0dp"
                            app:srcCompat="@drawable/homepage6" />

                        <TextView
                            android:id="@+id/hpcrossfitBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-900dp"
                            android:layout_marginTop="65dp"
                            android:layout_weight="1"
                            android:text="Crossfit"
                            android:textColor="@color/app_theme_light"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hpsilowyBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="130dp"
                            android:layout_marginTop="65dp"
                            android:layout_weight="1"
                            android:text="Siłowy"
                            android:textColor="@color/app_theme_light"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hpboksBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="145dp"
                            android:layout_marginTop="65dp"
                            android:layout_weight="1"
                            android:text="Boks"
                            android:textColor="@color/app_theme_light"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hpfunkcjonalnyBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="110dp"
                            android:layout_marginTop="65dp"
                            android:layout_weight="1"
                            android:text="Funkcjonalny"
                            android:textColor="@color/app_theme_light"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/hprelaksacyjnyBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="65dp"
                            android:layout_weight="1"
                            android:text="Stratching"
                            android:textColor="@color/app_theme_light"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="40dp"
                    android:paddingBottom="-500dp"
                    android:text="Najczęściej wybierane offline:"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/hpdlapanBtnImg"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="12dp"
                    app:srcCompat="@drawable/homepage7" />

                <ImageView
                    android:id="@+id/hpdlapanowBtnImg"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="202dp"
                    android:layout_marginTop="-181dp"
                    app:srcCompat="@drawable/homepage8" />

                <ImageView
                    android:id="@+id/hpboks2BtnImg"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="12dp"
                    app:srcCompat="@drawable/homepage9" />

                <ImageView
                    android:id="@+id/hpjogaBtnImg"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="202dp"
                    android:layout_marginTop="-181dp"
                    app:srcCompat="@drawable/homepage10" />

                <ImageView
                    android:id="@+id/hpstratchingBtnImg"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="12dp"
                    app:srcCompat="@drawable/homepage11" />

                <TextView
                    android:id="@+id/hpdlapanBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="-474dp"
                    android:text="Dla Pań"
                    android:textColor="@color/app_theme_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hpdlapanowBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="-30dp"
                    android:text="Dla Panów"
                    android:textColor="@color/app_theme_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hpboks2Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    android:layout_marginTop="168dp"
                    android:text="Boks"
                    android:textColor="@color/app_theme_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hpjogaBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="-20dp"
                    android:text="Joga"
                    android:textColor="@color/app_theme_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hpstratchingBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="170dp"
                    android:text="Stratching"
                    android:textColor="@color/app_theme_light"
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu">


    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
