<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoksActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        android:tint="@color/app_theme_light"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_search_24" />

    <TextView
        android:id="@+id/trening_h5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Boks"
        android:textColor="@color/purple_500"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar8" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="140dp"
                app:srcCompat="@drawable/boksfull" />

            <TextView
                android:id="@+id/textView161"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="Boks to sport, w którym dwóch zawodników walczy ze sobą wyłącznie przy użyciu pięści na kwadratowym ringu o boku długości od 4,88 do 7,32 m. Zabronione są ciosy poniżej pasa, a także uderzanie głową, kolanami czy łokciami, jak również wyprowadzanie ciosów w plecy, tył głowy i nerki. Walka może trwać maksymalnie 12 rund, z których każda trwa po 2–3 minuty, z kolei przerwy między rundami trwają zazwyczaj po 60 sekund. Nad przebiegiem każdej walki powinien czuwać wykwalifikowany sędzia główny, który może być wspierany przez kilku arbitrów liniowych. Walka może trwać pełną długość – po ukończeniu ostatniej rundy sędziowie przyznają pięściarzom punkty za każdą rundę i zwycięża ten, który uzyskał ich więcej. Walka jednak może również zostać zakończona przed czasem. Powalony na ring w wyniku ciosu bokser ma 10 sekund na podniesienie się, w przeciwnym razie przegrywa przez nokaut. Sędzia może także podjąć decyzję o zakończeniu pojedynku przez nokaut techniczny, kiedy jeden z zawodników nie jest w stanie kontynuować walki ze względu na kontuzję lub z innych przyczyn." />

            <Button
                android:id="@+id/bokszapisBtn"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="24dp"
                android:text="Zapisać się" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>